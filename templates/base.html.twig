<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('css/style.css')}}">        
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header class="main-header">
                <img class="logo" src="{{ asset('martin.png') }}" alt="page logo"/>
                
                <ul class="header-nav">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {# if is_grantes('ROLE_USER') DOES THE SAME BUT SPECIFICALLY FOR NORMAL USERS THAT ARE LOGGED #}
                        <li><a href="{{ path('app_logout') }}">Log Out</a></li>
                    {% else %}
                        <li><a href="{{ path('app_register') }}">Register</a></li>
                        <li><a href="{{ path('app_login') }}">Log In</a></li>
                    {% endif %}
                </ul>
            </header>
        {% endblock %}

        {% block body %}{% endblock %}
    </body>
</html>
